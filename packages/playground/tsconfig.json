{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noEmit": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "paths": {
      "@studiometa/playground/html-loader.js": ["./src/front/js/loaders/html.js"],
      "@studiometa/playground/style-loader.js": ["./src/front/js/loaders/style.js"],
      "@studiometa/playground/script-loader.js": ["./src/front/js/loaders/script.js"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
