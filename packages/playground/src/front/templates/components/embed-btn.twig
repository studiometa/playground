<a data-component="EmbedBtn"
  target="_blank"
  rel="noopener"
  title="Open playground in a new tab"
  class="relative flex items-center justify-center w-8 py-1 px-2 rounded bg-accent-300/30 dark:bg-accent-500/30 focus:ring-2 ring-accent-500 dark:ring-accent-600">
  &nbsp;
  <span class="sr-only">Open playground in a new tab</span>
  <span class="absolute block rotate-45 font-bold">â†‘</span>
</a>
<script>
  {# prettier-ignore-start #}
  (() => {
      const link = document.currentScript.previousElementSibling;
    if (!window.location.hash.includes('embed=true')) {
      link.classList.add('hidden');
    } else {
      link.href = window.location.href.replace('embed=true', '');
    }
  })()
  {# prettier-ignore-end #}
</script>
