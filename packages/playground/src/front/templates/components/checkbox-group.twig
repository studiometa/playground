{#
/**
 * @file
 *   Checkbox
 *
 * @description
 *   Display a list of checkbox input elements.
 *
 * @param {array} $items A list of checkbox inputs to render.
 */
#}

<div class="relative flex items-center gap-px">
  <span class="absolute -inset-y-1 inset-x-0 block rounded bg-blue-300 dark:bg-blue-800 bg-opacity-30 dark:bg-opacity-30 peer-checked:bg-opacity-100 peer-focus:ring"></span>
  {% for item in items %}
    {% include './checkbox.twig' with item only %}
  {% endfor %}
</div>
