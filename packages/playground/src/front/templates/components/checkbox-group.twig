{#
/**
 * @file
 *   Checkbox
 *
 * @description
 *   Display a list of checkbox input elements.
 *
 * @param {array} $items A list of checkbox inputs to render.
 */
#}

<div class="relative flex items-center gap-0">
  <span class="absolute -inset-y-1 inset-x-0 block rounded bg-accent-300/30 dark:bg-accent-500/30"></span>
  {% for item in items %}
    {% include './checkbox.twig' with item only %}
  {% endfor %}
</div>
