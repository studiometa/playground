{% set attributes =
  merge_html_attributes(
    attr ?? null,
    {},
    {
      class: ['group/btn relative', 'focus:outline-none']
    }
  )
%}

{% html_element tag|default('button') with attributes %}
  <span class="-z-10 absolute -inset-1 inset-x-0 block rounded bg-blue-300 dark:bg-blue-800 group-focus/btn:ring ring-blue-500 dark:ring-blue-600"></span>
  <span class="relative inline-block px-2 text-xs tracking-tighter sm:tracking-normal font-semibold">
    {% block content %}
      {{ content|default('') }}
    {% endblock %}
  </span>
{% end_html_element %}
