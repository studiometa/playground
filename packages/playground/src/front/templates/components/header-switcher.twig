{#
/**
 * @file
 *   Header Switcher
 *
 * @description
 *   Use it to add a button which will toggle the display of the main header.
 */
#}

<div data-component="HeaderSwitcher"
  class="flex is-embed:hidden rounded bg-zinc-100 dark:bg-zinc-800">
  <button title="Hide header"
    data-ref="hide"
    class="relative flex items-center justify-center w-8 py-1 px-2 rounded bg-accent-300/30 dark:bg-accent-500/30 focus:ring-2 ring-accent-500 dark:ring-accent-600">
    &nbsp;
    <span class="sr-only">Hide header</span>
    <span class="absolute block w-3 h-0.5 bg-black dark:bg-white rotate-45"></span>
    <span class="absolute block w-3 h-0.5 bg-black dark:bg-white -rotate-45"></span>
  </button>
  <button title="Show header"
    data-ref="show"
    class="relative hidden items-center justify-center w-8 py-1 px-2 rounded bg-accent-300/30 dark:bg-accent-500/30 focus:ring-2 ring-accent-500 dark:ring-accent-600">
    &nbsp;
    <span class="sr-only">Show header</span>
    <span class="absolute flex flex-col gap-0.5">
      <span class="block w-3 h-0.5 bg-black dark:bg-white"></span>
      <span class="block w-3 h-0.5 bg-black dark:bg-white"></span>
      <span class="block w-3 h-0.5 bg-black dark:bg-white"></span>
    </span>
  </button>
</div>
