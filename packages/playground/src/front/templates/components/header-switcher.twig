{#
/**
 * @file
 *   Header Switcher
 *
 * @description
 *   Use it to add a button which will toggle the display of the main header.
 */
#}

<div data-component="HeaderSwitcher"
  class="z-50 fixed top-0 right-0 flex items-center h-10 sm:h-12 p-2 sm:p-4 leading-4">
  <div class="flex rounded bg-zinc-100 dark:bg-zinc-800">
    <button title="Masquer le header"
      data-ref="hide"
      class="relative flex items-center justify-center w-8 py-1 px-2 rounded bg-accent-300/30 dark:bg-accent-500/30 focus:ring-2 ring-accent-500 dark:ring-accent-600">
      &nbsp;
      <span class="sr-only">Masquer le header</span>
      <span class="absolute block w-3 h-0.5 bg-black dark:bg-white rotate-45"></span>
      <span class="absolute block w-3 h-0.5 bg-black dark:bg-white -rotate-45"></span>
    </button>
    <button title="Afficher le header"
      data-ref="show"
      class="relative hidden items-center justify-center w-8 py-1 px-2 rounded bg-accent-300/30 dark:bg-accent-500/30 focus:ring-2 ring-accent-500 dark:ring-accent-600">
      &nbsp;
      <span class="sr-only">Afficher le header</span>
      <span class="relative block w-2 h-2 -rotate-45">
        <span class="absolute top-0 left-0 block w-2 h-0.5 bg-black dark:bg-white"></span>
        <span class="absolute top-0 left-0 block w-0.5 h-2 bg-black dark:bg-white"></span>
      </span>
    </button>
  </div>
</div>
