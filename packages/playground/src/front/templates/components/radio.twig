{#
/**
 * @file
 *   Radio
 *
 * @description
 *   Displays a radio input.
 *
 * @param {array}  $attr       Attributes for the root element.
 * @param {array}  $input_attr Attributes for the input element.
 * @param {string} $label      Label for the input element.
 * @block {string} $label      Label for the input element.
 */
#}

{% set attributes =
  merge_html_attributes(
    attr ?? null,
    {},
    {
      class: 'relative flex'
    }
  )
%}

{% set input_attributes =
  merge_html_attributes(
    input_attr ?? null,
    {},
    {
      type: 'radio',
      class: 'peer sr-only'
    }
  )
%}

<label {{ html_attributes(attributes) }}>
  <input {{ html_attributes(input_attributes) }} />
  <span class="absolute -inset-y-1 inset-x-0 block rounded bg-accent-300/0 dark:bg-accent-500/0 peer-checked:bg-accent-300 dark:peer-checked:bg-accent-500 peer-focus:ring-2 ring-accent-500 dark:ring-accent-600"></span>
  <span class="relative inline-flex items-center px-2 peer-checked:text-accent-900 dark:peer-checked:text-white text-xs font-semibold">
    {% block label %}
      {{ label }}
    {% endblock %}
  </span>
</label>
