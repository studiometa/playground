{
  "name": "@studiometa/playground",
  "version": "0.2.1",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studiometa/playground.git"
  },
  "keywords": [
    "playground",
    "code",
    "editor",
    "online"
  ],
  "author": "Studio Meta <agence@studiometa.fr> (https://www.studiometa.fr/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/studiometa/playground/issues"
  },
  "homepage": "https://github.com/studiometa/playground#readme",
  "files": [
    "dist/"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "node": "./dist/index.js"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "import": "./dist/preset.js",
      "node": "./dist/preset.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js",
      "node": "./dist/tailwind.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "watch": "concurrently 'npm run watch:esbuild' 'npm run watch:tailwind' --names 'esbuild,tailwind'",
    "watch:esbuild": "node scripts/watch.js",
    "watch:tailwind": "npm run build:tailwind -- --watch",
    "prebuild": "rm -rf dist",
    "build": "npm run build:esbuild && npm run build:tailwind && npm run build:types",
    "build:esbuild": "node scripts/build.js",
    "build:tailwind": "npx @tailwindcss/cli -i ./src/front/css/app.css -o ./dist/front/css/app.css",
    "build:types": "tsc --build tsconfig.build.json"
  },
  "dependencies": {
    "@studiometa/js-toolkit": "^3.0.0-beta.3",
    "@studiometa/webpack-config": "^6.3.2",
    "@studiometa/webpack-config-preset-prototyping": "^6.3.2",
    "@studiometa/webpack-config-preset-tailwindcss-4": "6.3.6",
    "emmet-monaco-es": "^5.5.0",
    "esbuild-wasm": "^0.24.0",
    "fast-glob": "^3.3.2",
    "fflate": "^0.8.2",
    "monaco-editor": "^0.52.2",
    "monaco-editor-auto-typings": "0.4.6",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "path-browserify": "1.0.1",
    "tailwindcss": "4.1.13",
    "webpack-virtual-modules": "^0.6.2"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.14",
    "concurrently": "9.2.1",
    "type-fest": "4.41.0",
    "typescript": "5.9.3"
  }
}
